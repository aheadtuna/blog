<%= form_with model: [article, article.comments.build] do |form| %>
    <p>
        <%= form.label :commenter, "Name:"%>
        <%= form.text_field :commenter%>
    </p>

    <p>
        <%= form.label :body, "Comment:"%>
        <%= form.text_area :body%>
    </p>

    <p>
        <%= form.submit%>
    </p>
<% end %>